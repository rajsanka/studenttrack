<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="2px"/>
            <size android:height="10dip"/>
            <gradient android:angle="-90" android:startColor="@color/colorPrimaryLightTransparent" android:endColor="@color/colorPrimaryLightTransparent"  />
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="2px"/>
            <size android:height="10dip"/>
            <gradient android:angle="-90" android:startColor="@color/colorPrimaryLight" android:endColor="@color/colorPrimaryLight" />
        </shape>
    </item>
</selector>