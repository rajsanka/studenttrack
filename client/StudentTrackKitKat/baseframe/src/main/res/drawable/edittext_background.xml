<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:top="-1dp" android:right="-1dp" android:left="-1dp" android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="#DDDDDD" />
            <stroke
                android:width="1px"
                android:color="#DDDDDD" />
            <padding
                android:left="2dp"
                android:right="2dp"
                android:top="6dp"
                android:bottom="6dp"/>
        </shape>
    </item>
    <item android:top="-1dp" android:right="-1dp" android:left="-1dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/white" />
            <stroke
                android:width="1px"
                android:color="#DDDDDD" />
            <padding
                android:left="2dp"
                android:right="2dp"
                android:top="6dp"
                android:bottom="6dp"/>
        </shape>
    </item>
</selector>